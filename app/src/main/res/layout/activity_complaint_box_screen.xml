<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ComplaintBoxScreen">

    <TextView
        android:id="@+id/textViewComplaintBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="COMPLAINT BOX"
        android:textColor="#DA2C1F"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameComplaintBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:textColorHint="#757171"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="#5171C3"
        app:hintEnabled="false"
        app:hintTextColor="#024E80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComplaintBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameCompBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Enter Your Name"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHighlight="#B2D8E4"
            android:textColorHint="#A8A7A9" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneNoComplaintBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="96dp"
        android:textColorHint="#757171"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="#5171C3"
        app:hintEnabled="false"
        app:hintTextColor="#024E80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComplaintBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNoCompBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Enter Your Phone No"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHighlight="#B2D8E4"
            android:textColorHint="#A8A7A9" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textColorHint="#757171"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="#5171C3"
        app:hintEnabled="false"
        app:hintTextColor="#024E80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameComplaintBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/compComplaintBox"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:drawablePadding="10dp"
            android:gravity="top|start"
            android:hint="Write your complaints here."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:scrollHorizontally="false"
            android:textColor="@color/black"
            android:textColorHighlight="#B2D8E4"
            android:textColorHint="#A8A7A9"
            android:textStyle="italic" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/PrevProtextViewComplaintBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="TAG THE DEPARTMENTS"
        android:textColor="@color/c2"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="#757171"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="#5171C3"
        app:hintEnabled="false"
        app:hintTextColor="#024E80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComplaintBox"
        app:layout_constraintVertical_bias="0.584">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dept1CompBox"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Department 1"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHighlight="#B2D8E4"
            android:textColorHint="#A8A7A9" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="#757171"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="#5171C3"
        app:hintEnabled="false"
        app:hintTextColor="#024E80"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.138">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dept2CompBox"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Department 2"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHighlight="#B2D8E4"
            android:textColorHint="#A8A7A9" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="#757171"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="#5171C3"
        app:hintEnabled="false"
        app:hintTextColor="#024E80"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.428">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dept3CompBox"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Department 3"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHighlight="#B2D8E4"
            android:textColorHint="#A8A7A9" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="9dp"
        android:layout_marginTop="60dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.785">

        <Button
            android:id="@+id/submitBtnCompBox"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/c2"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#FAF6F6"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>