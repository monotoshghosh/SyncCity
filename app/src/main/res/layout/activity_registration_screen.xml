<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegistrationScreen">

    <TextView
        android:id="@+id/newProTextViewDeptScr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="1dp"
        android:text="REGISTRATION"
        android:textColor="#5171C3"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewSpecDept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewSpecDept"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newProTextViewDeptScr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/deptReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="Department"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/villTownReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="Village/ Town"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/blockReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="BLock"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/distReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="District"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pinCodeReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="Pin Code"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/stateReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="State"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneNoReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="Phone No"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColorHint="#757171"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:hintTextColor="#024E80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailIDReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="#B2D8E4"
                    android:textColorHint="#A8A7A9" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                android:textColorHint="#757171"
                app:hintTextColor="#024E80"
                app:boxStrokeColor="#5171C3"
                app:hintEnabled="false"
                app:endIconTint="#605E5E"
                app:endIconMode="password_toggle"
                app:endIconScaleType="center"
                android:gravity="start">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordReg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textColorHint="#A8A7A9"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColorHighlight="#B2D8E4" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="9dp">

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="#FAF6F6"
                    android:background="@color/c2"
                    android:text="Sign Up"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>