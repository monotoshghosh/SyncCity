<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".ComplaintsReceived">

<TextView
    android:id="@+id/DeptTextViewDeptScr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="1dp"
    android:text="COMPLAINTS RECEIVED"
    android:textColor="#DA2C1F"
    android:textSize="45dp"
    android:gravity="center"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/scrollViewSpecDept"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewSpecDept"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeptTextViewDeptScr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/c2"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="325dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monotosh Ghosh"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Road damaged by heavy truck traffic, with rainwater accumulation leading to various diseases..."
                        android:textColor="@color/white"
                        android:textStyle="italic"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginEnd="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:text="# BDO"
                            android:textColor="#FFE500"
                            android:background="#A5B2E3"/>

                        <TextView
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginEnd="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:text="# Road Department"
                            android:textColor="#FFE500"
                            android:background="#A5B2E3"/>

                        <TextView
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginEnd="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:text="# PWD"
                            android:textColor="#FFE500"
                            android:background="#A5B2E3"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/c2"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="325dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monotosh Ghosh"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Road damaged by heavy truck traffic, with rainwater accumulation leading to various diseases..."
                        android:textColor="@color/white"
                        android:textStyle="italic"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginEnd="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:text="# BDO"
                            android:textColor="#FFE500"
                            android:background="#A5B2E3"/>

                        <TextView
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginEnd="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:text="# Road Department"
                            android:textColor="#FFE500"
                            android:background="#A5B2E3"/>

                        <TextView
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:layout_marginEnd="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:text="# PWD"
                            android:textColor="#FFE500"
                            android:background="#A5B2E3"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="11dp"
                app:cardElevation="10dp">

                <Button
                    android:id="@+id/contOtherDeptSpecDept"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#3AB605"
                    android:gravity="center"
                    android:text="SOLVED"
                    android:textColor="#FAF6F6"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />

            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


