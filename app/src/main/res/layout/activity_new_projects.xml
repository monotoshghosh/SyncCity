<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".NewProjects">

<TextView
    android:id="@+id/textViewNewProjects"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="1dp"
    android:text="NEW PROJECTS"
    android:textColor="#5171C3"
    android:textSize="45dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/scrollViewNewProjects"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ScrollView
    android:id="@+id/scrollViewNewProjects"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="2dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textViewNewProjects">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColorHint="#757171"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="#5171C3"
            app:hintEnabled="false"
            app:hintTextColor="#024E80">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deptNewProject"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="Enter City"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHighlight="#B2D8E4"
                android:textColorHint="#A8A7A9" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColorHint="#757171"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="#5171C3"
            app:hintEnabled="false"
            app:hintTextColor="#024E80">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/blockNewProject"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="BLock"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHighlight="#B2D8E4"
                android:textColorHint="#A8A7A9" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColorHint="#757171"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="#5171C3"
            app:hintEnabled="false"
            app:hintTextColor="#024E80">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/distNewProject"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="District"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHighlight="#B2D8E4"
                android:textColorHint="#A8A7A9" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColorHint="#757171"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="#5171C3"
            app:hintEnabled="false"
            app:hintTextColor="#024E80">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/stateNewProject"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="State"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHighlight="#B2D8E4"
                android:textColorHint="#A8A7A9" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:textColorHint="#757171"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="#5171C3"
            app:hintEnabled="false"
            app:hintTextColor="#024E80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameComplaintBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/noteNewProjects"
                android:layout_width="300dp"
                android:layout_height="145dp"
                android:drawablePadding="10dp"
                android:gravity="top|start"
                android:hint="Write everything about the new project here."
                android:inputType="textMultiLine"
                android:minLines="3"
                android:scrollHorizontally="false"
                android:textColor="@color/black"
                android:textColorHighlight="#B2D8E4"
                android:textColorHint="#A8A7A9"
                android:textStyle="italic" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            app:cardCornerRadius="9dp">

            <Button
                android:id="@+id/uploadBtnNewProject"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FAF6F6"
                android:background="#AA82F1"
                android:text="Upload Documents"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="29dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            app:cardCornerRadius="9dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/submitBtnNewProject"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FAF6F6"
                android:background="@color/c2"
                android:text="Next"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
